<Window x:Class="SampleApp3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleApp3"
        mc:Ignorable="d"
        Title="User secrets" Height="226" Width="571" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox HorizontalAlignment="Center" Height="24" Margin="0,45,0,0" TextWrapping="Wrap" 
                 Text="{Binding DefaultConnection, Mode=OneWay}" IsReadOnly="True" VerticalAlignment="Top" Width="551"/>
        <Label Content="Connection string" FontWeight="Bold" HorizontalAlignment="Left" Height="25" Margin="1,15,0,0" VerticalAlignment="Top" Width="112"/>
        <Label Content="From Address" FontWeight="Bold" HorizontalAlignment="Left" Height="26" Margin="7,82,0,0" VerticalAlignment="Top" Width="129"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="12,114,0,0" TextWrapping="Wrap" Text="{Binding FromAddress, Mode=TwoWay}" VerticalAlignment="Top" Width="453"/>

    </Grid>
</Window>
